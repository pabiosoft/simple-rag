# Variables d'environnement - Exemple
# Copiez ce fichier vers .env et remplissez les valeurs

# API OpenAI
OPENAI_API_KEY=your-openai-api-key-here 

# Base de données vectorielle Qdrant
QDRANT_URL=http://vectordb:6333

# Port de l'application
PORT=8000

# Configuration de Qdrant
QDRANT_PORT=6333


COLLECTION_NAME=corpus
DEFAULT_DOCUMENT_AUTHOR=team_dashlab
APP_THEME=
WELCOME_MESSAGE=

# Modèle d'embedding OpenAI à utiliser
EMBEDDING_MODEL=text-embedding-ada-002

# Paramètres de chunking (segmentation des longs documents)
CHUNK_SIZE=500
CHUNK_OVERLAP=50
MAX_TOKENS_PER_CHUNK=1500
